{
    "note": "This is a sample config file. You should change the mockDirectory to a more reasonable path.",
    "mockDirectory": "/Educations/nodejspract/apimocker/samplemocks/",
    "staticDirectory": "/file/system/path/to/static/directory",
    "staticPath": "/web/path/to/static/directory",
    "quiet": false,
    "port": "7878",
    "latency": 50,
    "logRequestHeaders": false,
    "webServices": {
        "Demo": {
            "mockFile": "Hello.json",
            "latency": 20,
            "verbs": ["get", "post"],
            "responses": {
                "get": {
                    "mockFile": "Hello.json"
                },
                "post": {
                    "mockFile": "ace.json"
                }
            }
        },
        "App": {
            "verbs": ["get", "post"],
            "responses": {
                "post": { "httpStatus": 200, "mockFile": "UserInfo.json" },
                "get": { "mockFile": "UserInfoget.json" }
            }
        },
        "app2": {
            "verbs": ["post"],
            "switch": ["name", "place", "desc"],
            "responses": {
                "contentType": "application/json",
                "post": {
                    "httpStatus": 401,
                    "mockFile": "sorry.json"
                }
            },
            "switchResponses": {
                "nameSahajahanplaceLondondescSoftware": { "httpStatus": 200, "mockFile": "DetailsMale.json" },
                "nameSalimplaceLondondescRailway": { "httpStatus": 200, "mockFile": "DetailsFemale.json" }
            }
        }
    }
}